---
import { getCollection } from "astro:content";
import BaseLayout from "../../layouts/BaseLayout.astro";
import { Image } from "astro:assets";
import PageTitle from "../../components/ui/PageTitle.astro";
import { getCurrentLocale, getLocalizedData } from "../../i18n/utils";

const currentLocale = getCurrentLocale(Astro.currentLocale);
const { wiki } = getLocalizedData({ currentLocale });
const articles = (await getCollection("wiki")).filter((article) =>
  article.id.includes(`${currentLocale}/`),
);
---

<BaseLayout title={wiki.title} ogDescription={wiki.title}>
  <PageTitle title={wiki.title} />
  <section>
    <ul class="w-full">
      {
        articles.map((article) => (
          <>
            <li class="mb-8 overflow-hidden rounded shadow-lg hover:shadow-xl">
              <a
                href={`wiki/${article.slug.split("/")[1]}`}
                class="grid grid-cols-2"
              >
                <Image
                  class="max-h-48 w-full shrink rounded-none object-cover"
                  src={article.data.titleImage}
                  alt=""
                  width={100}
                  height={200}
                />
                <div class="px-6 py-4">
                  <h2 class="mb-2 text-xl font-bold">{article.data.title}</h2>
                  <p class="text-gray-950">{article.data.ogDescription}</p>
                </div>
              </a>
            </li>
          </>
        ))
      }
    </ul>
  </section>
</BaseLayout>
