---
import { Image } from "astro:assets";
import BaseLayout from "../../layouts/BaseLayout.astro";
import titleImage from "../../images/blog-placeholder-about.jpg";
import { getCurrentLocale, getLocalizedData } from "../../i18n/utils";
import PageTitle from "../ui/PageTitle.astro";

const currentLocale = getCurrentLocale(Astro.currentLocale);
const { about, header } = getLocalizedData({ currentLocale });
---

<BaseLayout title={header.nav.about} description={header.nav.about}>
  <PageTitle title={header.nav.about} />
  <article class="prose mx-auto text-lg">
    <div class="mx-auto">
      <Image width={1020} height={510} src={titleImage} alt="placeholder" />
    </div>
    <p>
      {about.paragraphOne}
    </p>

    <p>
      {about.paragraphTwo}
    </p>

    <p>
      {about.paragraphThree}
    </p>

    <p>
      {about.paragraphFour}
    </p>
  </article>
</BaseLayout>
