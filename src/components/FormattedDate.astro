---
interface Props {
  date: Date;
  className?: string;
}

const { date, className } = Astro.props;
---

<time datetime={date.toISOString()} class:list={["text-inherit", className]}>
  {
    date.toLocaleDateString("de-DE", {
      year: "numeric",
      month: "short",
      day: "numeric",
    })
  }
</time>
