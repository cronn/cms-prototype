---
interface Props {
  title: string;
  description: string;
  image?: string;
}

import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { getCurrentLocale } from "../i18n/utils";

const { title, description, image } = Astro.props;
const currentLocale = getCurrentLocale(Astro.currentLocale);
---

<!doctype html>
<html lang={currentLocale ?? "de"}>
  <head>
    <BaseHead title={title} description={description} image={image} />
  </head>
  <body class="text-slate-0 flex min-h-screen flex-col text-lg">
    <Header />
    <main
      class="xs:max-w-screen-xs md:max-screen-md mx-auto my-8 w-full grow sm:max-w-screen-sm md:px-0 lg:max-w-screen-lg"
    >
      <slot />
    </main>
    <Footer />
  </body>
</html>
